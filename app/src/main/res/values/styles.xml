    <style name="NavyBtn" parent="@android:style/Theme.Material">
        <item name="android:background">#FF8A00</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="OrngBtn" parent="@android:style/Theme.Material">
        <item name="android:colorButtonNormal">#FF8A00</item>
        <item name="android:textColor">#FFFFFF</item>
